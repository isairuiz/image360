<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.importare.image360.MainActivity$PlaceholderFragment">

    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/enviar_correo_btn"
        android:layout_width="@dimen/width_correo"
        android:layout_height="@dimen/height_correo"
        android:src="@drawable/selector_btn_enviar"
        android:layout_marginRight="@dimen/margin_right_correo"
        android:layout_marginBottom="@dimen/margin_bottom_correo"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        />


</RelativeLayout>
